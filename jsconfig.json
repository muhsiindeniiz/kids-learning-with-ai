{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "downlevelIteration": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "moduleResolution": "bundler",
    "types": ["node"]
  },
  "include": [
    "environment.d.js",
    "next-*.d.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.d.ts",
    "app/**/*.{js,jsx}",
    "core/**/*.{js,jsx}",
    "modules/**/*.{js,jsx}",
    "packages/**/*.{js,jsx}",
    "prisma/**/*.js",
    "modules/speech/utils/date-grouping.js"
  ],
  "exclude": ["node_modules"]
}
